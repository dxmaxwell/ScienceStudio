<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
           
	<context:annotation-config/>
		
	<bean id="rootTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.RootTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="projectTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.ProjectTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="projectPersonTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.ProjectPersonTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="sampleTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.SampleTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="sessionTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.SessionTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="experimentTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.ExperimentTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="scanTreeNodeController"
		class="ca.sciencestudio.service.tree.controllers.ScanTreeNodeController">
		<property name="modelServletPath" value="/model"/>
	</bean>
	
	<bean id="annotationMapping"
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>
