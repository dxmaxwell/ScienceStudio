<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	id="WebApp_ID" version="2.5">
	
	<display-name>SS_Core_Web_App</display-name>
  
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>ss_core.root</param-value>
	</context-param>
  
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext-general.xml
			/WEB-INF/applicationContext-ibatis.xml
			/WEB-INF/applicationContext-dao.xml
			/WEB-INF/applicationContext-hmc.xml
			/WEB-INF/applicationContext-dao-rest.xml
			/WEB-INF/applicationContext-security.xml
			/WEB-INF/applicationContext-marshal.xml
		</param-value>
	</context-param>
  
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
  
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
  
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
	<filter>
		<filter-name>disableBrowserCacheFilter</filter-name>
		<filter-class>ca.sciencestudio.util.servlet.DisableBrowserCacheFilter</filter-class>	
	</filter>
  
	<filter-mapping>
		<filter-name>disableBrowserCacheFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
	<servlet>
		<servlet-name>app</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>app</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
  
    <servlet>
		<servlet-name>tree</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>tree</servlet-name>
		<url-pattern>/tree/*</url-pattern>
	</servlet-mapping>
  
	<servlet>
		<servlet-name>model</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>model</servlet-name>
		<url-pattern>/model/*</url-pattern>
	</servlet-mapping>
  
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
