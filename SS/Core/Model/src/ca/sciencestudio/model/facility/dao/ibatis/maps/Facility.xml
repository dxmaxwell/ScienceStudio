<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Facility">
	<resultMap id="facility" class="ca.sciencestudio.model.facility.ibatis.IbatisFacility">
		<result property="id" column="facility_id"/>
		<result property="name" column="name"/>
		<result property="longName" column="long_name"/>
		<result property="description" column="description"/>
		<result property="phoneNumber" column="phone_number"/>
		<result property="emailAddress" column="email_address"/>
		<result property="location" column="location"/>
	</resultMap>
	
	<insert id="addFacility">
		INSERT INTO scstudio.facility
		(
			name,
			long_name,
			description,
			phone_number,
			email_address,
			location
		)
		VALUES
		(
			#name:VARCHAR#,
			#longName:VARCHAR#,
			#description:VARCHAR#,
			#phoneNumber:VARCHAR#,
			#emailAddress:VARCHAR#,
			#location:VARCHAR#
		)
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
			${identity.function}
		</selectKey>
	</insert>
	
	<update id="editFacility">
		UPDATE scstudio.facility
			SET
				name = #name#,
				long_name = #longName#,
				description = #description:VARCHAR#
				phone_number = #phoneNumber:VARCHAR#,
				email_address = #emailAddress:VARCHAR#,
				location = #location:VARCHAR#				
			WHERE
				facility_id = #id:INT#
	</update>
	
	<delete id="removeFacility">
		DELETE FROM scstudio.facility
			WHERE facility_id = #value#
	</delete>
	
	<select id="getFacilityList" resultMap="facility">
		SELECT * FROM scstudio.facility
	</select>
	
	<select id="getFacilityById" resultMap="facility">
		SELECT * FROM scstudio.facility
			WHERE facility_id = #value#
	</select>
	
	<select id="getFacilityListByName" resultMap="facility">
		SELECT * FROM scstudio.facility
			WHERE name = #value#
	</select>
	
</sqlMap>
