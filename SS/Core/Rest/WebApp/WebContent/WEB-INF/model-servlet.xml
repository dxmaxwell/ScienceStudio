<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:annotation-config/>
	
	<bean class="ca.sciencestudio.rest.service.controllers.PersonController">
		<property name="personDAO" ref="personDAO"/>
	</bean>
	
	<bean class="ca.sciencestudio.rest.service.controllers.ProjectController">
		<property name="projectDAO" ref="projectDAO"/>
	</bean>
	
	<bean class="ca.sciencestudio.rest.service.controllers.ScanController">
		<property name="scanDAO" ref="scanDAO"/>
	</bean>
	
	<bean class="ca.sciencestudio.rest.service.controllers.ProjectPersonController">
		<property name="projectPersonDAO" ref="projectPersonDAO"/>
	</bean>
	
	<bean id="annotationMapping"
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
	</bean>

	<bean id="annoationMethodHandler"
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
				<bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
					<property name="objectMapper">
						<bean class="ca.sciencestudio.util.bean.JacksonObjectMapperFactoryBean">
							<property name="writeDatesAsTimestamps" value="false"/>
						</bean>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>
