<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config/>
  	
  	<!-- Application Controllers -->

	<bean id="mainPageController"
		class="ca.sciencestudio.importer.service.controllers.MainPageController">
	</bean>

	<bean id="ExperimentList" class="ca.sciencestudio.importer.service.controllers.ExperimentList">
	</bean>
	<bean id="Scan" class="ca.sciencestudio.importer.service.controllers.ScanController">
		<property name="realm" value="realm.client"></property>
		<property name="jsonFile" value="import.json"></property>
	</bean>
	<bean id="annotationMapping"
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
	</bean>

	<bean id="annoationMethodHandler"
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters" ref="httpMessageConverters"/>
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>
