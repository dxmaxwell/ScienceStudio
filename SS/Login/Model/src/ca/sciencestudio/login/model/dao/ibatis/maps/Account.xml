<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Account">
	<resultMap id="account" class="ca.sciencestudio.login.model.ibatis.IbatisAccount">
		<result property="id" column="account_id" />
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="personUid" column="person_uid"/>
		<result property="creationDate" column="creation_date"/>
		<result property="statusString" column="status"/>
	</resultMap>
	
	<insert id="addAccount">
		INSERT INTO ${database}.account (
			username,
			password,
			person_uid,
			creation_date,
			status
		)
		VALUES (
			#username:VARCHAR#,
			#password:VARCHAR#,
			#personUid:VARCHAR#,
			${date.current.function},
			#statusString:VARCHAR#
		)
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
			${identity.function}
		</selectKey>
	</insert>
	
	<update id="editAccount">
		UPDATE ${database}.account
			SET 
				username = #username:VARCHAR#,
				password = #password:VARCHAR#,
				person_uid = #personUid:VARCHAR#,
				status = #statusString:VARCHAR#
			WHERE 
				account_id = #id#
	</update>
	
	<delete id="removeAccount">
		DELETE FROM ${database}.account
			WHERE account_id = #value#
	</delete>

	<select id="getAccountById" resultMap="account">
		SELECT * FROM ${database}.account
			WHERE account_id = #value#
	</select>
	
	<select id="getAccountByUsername" resultMap="account">
		SELECT * FROM ${database}.account
			WHERE username = #value#
	</select>
	
	<select id="getAccountList" resultMap="account">
		SELECT * FROM ${database}.account
	</select>
	
	<select id="getAccountUsernameList" resultClass="java.lang.String">
		SELECT username FROM ${database}.account
	</select>
	
</sqlMap>
