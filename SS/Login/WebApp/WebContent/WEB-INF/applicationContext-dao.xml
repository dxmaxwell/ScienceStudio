<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!---  ===================================================================
  	-  DAOs
  	-  =================================================================== -->
	<bean id="accountDAO"
		class="ca.sciencestudio.login.model.dao.ibatis.IbatisAccountDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="loginRoleDAO"
		class="ca.sciencestudio.login.model.dao.ibatis.IbatisLoginRoleDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="loginGroupDAO"
		class="ca.sciencestudio.login.model.dao.ibatis.IbatisLoginGroupDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="loginGroupMemberDAO"
		class="ca.sciencestudio.login.model.dao.ibatis.IbatisLoginGroupMemberDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="loginSessionDAO"
		class="ca.sciencestudio.login.model.dao.ibatis.IbatisLoginSessionDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="projectPersonDAO"
		class="ca.sciencestudio.model.project.dao.ibatis.IbatisProjectPersonDAO">
		<property name="sqlMapClientTemplate" ref="sqlMapClientTemplate"/>
	</bean>
	
	<bean id="personDAO"
		class="ca.sciencestudio.model.dao.rest.RestPersonDAO">
		<property name="restTemplate" ref="restTemplate"/>
		<property name="baseUrl" value="http://localhost:8080/ssrest/model"/>
	</bean>
	
</beans>
