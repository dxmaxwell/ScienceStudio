<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config/>
	
	<bean id="mainPageController"
		class="ca.sciencestudio.nanofab.admin.service.controllers.MainPageController">
	</bean>
	
	<bean id="laboratorySessionController" 
		class="ca.sciencestudio.nanofab.admin.service.controllers.LaboratorySessionController">
		<property name="facilityName" value="WNF"/>
		<property name="laboratoryName" value="LEO1540XB"/>
	</bean>
	
	<bean id="laboratorySessionValidator"
		class="ca.sciencestudio.nanofab.admin.service.validators.LaboratorySessionValidator">
	</bean>
	
	<bean id="annotationMapping"
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
	</bean>
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>
